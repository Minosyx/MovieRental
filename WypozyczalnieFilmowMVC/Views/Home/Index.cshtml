@{
    ViewBag.Title = "Home Page";
}
<html>
<head>
    @Styles.Render("~/Content/css")
</head>

<body>
    <div class="jumbotron">
        <h2>MOVIED</h2>
        <p class="lead">MOVIED - your favourite film rental shop, try it and you will be trully mov<b>I</b>ed!</p>
    </div>

    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel" data-interval="2000" data-pause="hover">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="carousel-content">
                    <div style="margin: 0 auto">
                        <p>
                            <img alt="spiderman_no_way_home" src="https://eplakaty.pl/upload/D7LP24fW0AEBMlz.jpg" />
                        </p>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="carousel-content">
                    <div style="margin: 0 auto">
                        <p>
                            <img src="https://fwcdn.pl/fpo/29/36/772936/7961027.3.jpg" alt="szybcy_i_wsciekli_9" />
                        </p>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="carousel-content">
                    <div style="margin: 0 auto">
                        <p>
                            <img src="https://media.multikino.pl/uploads/images/films_and_events/encanto-net-cut_91ce912078.jpg" alt="encanto" />
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />

    <div class="row">
        <div class="well">
            <h2>What is MOVIED?</h2>
            <p>
                MOVIED is a quick and easy to use rental shop. You can get your favourite movies in just a few clicks! Not sure what you are looking for?
            </p>
            <p>@Html.ActionLink("Find something for yourself", "Index", "Movies", null, new { @class = "btn btn-info" })</p>
        </div>
        <div class="well">
            <h2>You have your favourite genre but don't know what to watch?</h2>
            <p>
                Check what we have!
            </p>
            <p>@Html.ActionLink("Category list", "Index", "Categories", null, new { @class = "btn btn-info" })</p>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.carousel').carousel();
        });
    </script>
</body>
</html>
